@model PacientesAtendimentos.Models.ViewModel.PacienteViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Editar Paciente</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Paciente.Id" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 form-group">
            <label asp-for="Paciente.Nome" class="control-label">Nome</label>
            <input asp-for="Paciente.Nome" class="form-control" />
            <span asp-validation-for="Paciente.Nome" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Paciente.DataNascimento" class="control-label">Data de Nascimento</label>
            <input type="date" asp-for="Paciente.DataNascimento" class="form-control" />
            <span asp-validation-for="Paciente.DataNascimento" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Paciente.Sexo" class="control-label">Sexo</label>
            <select asp-for="Paciente.Sexo" asp-items="@(new SelectList(Model.ListaSexos))" class="form-control single-select">
                <option selected>Sexo</option>
            </select>
            <span asp-validation-for="Paciente.Sexo" class="text-danger"></span>
        </div>
        <div class="col form-group">
            <label asp-for="Paciente.EstadoCivil" class="control-label">Estado Civil</label>
            <select asp-for="Paciente.EstadoCivil" asp-items="@(new SelectList(Model.ListaEstadoCivil))" class="form-control single-select">
            </select>
            <span asp-validation-for="Paciente.EstadoCivil" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col form-group">
            <label asp-for="Paciente.Profissao" class="control-label">Profissão</label>
            <input type="text" asp-for="Paciente.Profissao" class="form-control" />
            <span asp-validation-for="Paciente.Profissao" class="text-danger"></span>
        </div>
        <div class="col-md-5 form-group">
            <label asp-for="Paciente.Email" class="control-label">E-mail</label>
            <input type="email" asp-for="Paciente.Email" class="form-control" />
            <span asp-validation-for="Paciente.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Paciente.Telefone" class="control-label">Telefone</label>
            <input type="tel" asp-for="Paciente.Telefone" class="form-control" />
            <span asp-validation-for="Paciente.Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Paciente.Contato" class="control-label"></label>
            <input type="text" asp-for="Paciente.Contato" class="form-control" />
            <span asp-validation-for="Paciente.Contato" class="text-danger"></span>
        </div>
    </div>   
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
